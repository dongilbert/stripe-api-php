{
    "name": "jlinn/stripe-api-php",
    "type": "library",
    "description": "A PHP client library for Stripe's REST API",
    "keywords": ["stripe", "api", "payments"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Linn",
            "homepage": "https://github.com/jlinn"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "guzzle/guzzle": "~3.8",
        "jms/serializer": "~0.15"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "league/phpunit-coverage-listener": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Stripe\\": "src/",
            "Stripe\\Tests\\": "tests/"
        }
    }
}
